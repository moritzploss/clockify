{
    "env": {
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb", 
        "plugin:@typescript-eslint/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "settings": {
        "import/resolver": {
          "node": {
            "extensions": [".js", ".ts"]
            }
        }
    },
    "rules": {
        "indent": ["error", 2],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
            "js": "never",
            "jsx": "never",
            "ts": "never",
            "tsx": "never"
            }
        ],
        "import/prefer-default-export": "off"
    }
}
